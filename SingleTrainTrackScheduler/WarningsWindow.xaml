<Window x:Class="SingleTrainTrackScheduler.WarningsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kaydırma Sınırı Uyarıları"
        Height="420" Width="560"
        WindowStartupLocation="Manual"
        ResizeMode="CanResizeWithGrip"
        Topmost="True">
	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<TextBlock Grid.Row="0" Text="OPT olmayan (mor) trenler:"
                   FontWeight="SemiBold" Margin="0,0,0,6"/>

		<!-- Uyarı satırları -->
		<ListBox x:Name="lstWarn"
                 Grid.Row="1"
                 MinHeight="240"
                 FontFamily="Consolas"
                 HorizontalContentAlignment="Stretch"
                 SelectionMode="Single"/>

		<!-- Butonlar -->
		<StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
			<Button x:Name="BtnAcceptSelected"
                    Content="Seçili Moru Onayla"
                    Click="BtnAcceptSelected_Click"
                    Margin="0,0,8,0" Padding="10,6"/>
			<Button x:Name="BtnAcceptAll"
                    Content="Morları Onayla"
                    Click="BtnAcceptAll_Click"
                    Padding="10,6"/>
		</StackPanel>
	</Grid>
</Window>
